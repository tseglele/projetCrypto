{% extends 'base.html.twig' %}

{%block title%}User index{%endblock%}

{% block body %}
    {{ include('nav.html.twig') }}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Date of creation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.date_creation }}</td>
                <td>
                    <a  class=" btn btn-secondary" href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a  class=" btn btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class=" btn btn-success" href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}